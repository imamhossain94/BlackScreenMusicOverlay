<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="colorPrimaryText" format="color"/>
        <attr name="colorSecondaryText" format="color"/>
        <attr name="colorIcon" format="color"/>
        <attr name="colorBackground" format="color"/>
        <attr name="colorCardBackground" format="color"/>
        <attr name="colorTipCardBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="PermissionCardView">
        <attr name="IconDrawable" format="reference" />
        <attr name="TitleText" format="string" />
        <attr name="SummaryText" format="string" />
    </declare-styleable>

    <declare-styleable name="CardViewCustomAttrs">
        <attr name="strokeWidthX" format="dimension" />
        <attr name="strokeColorX" format="color" />
    </declare-styleable>

    <declare-styleable name="TextClockView">
        <!-- Clock Update Settings -->
        <attr name="textClockAutoUpdate" format="boolean"/>
        <attr name="timePattern" format="string"/>

        <!-- Hour Text Settings -->
        <attr name="hourColor" format="color"/>
        <attr name="hourTextSize" format="dimension"/>

        <!-- Minute Text Settings -->
        <attr name="minuteColor" format="color"/>
        <attr name="minuteTextSize" format="dimension"/>

        <!-- Meridian (AM/PM) Text Settings -->
        <attr name="meridianColor" format="color"/>
        <attr name="meridianTextSize" format="dimension"/>

        <!-- Clock Type (12-hour or 24-hour) -->
        <attr name="clockType" format="enum">
            <enum name="Hour12" value="0"/>
            <enum name="Hour24" value="1"/>
        </attr>

        <!-- Clock Style Settings -->
        <attr name="clockStyle" format="enum">
            <enum name="VerticalNumber" value="0"/>
            <enum name="HorizontalNumber" value="1"/>
            <enum name="HorizontalNumber2" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="FrameClockView">
        <!-- Clock Attributes -->
        <attr name="frameClockAutoUpdate" format="boolean"/>

        <!-- Frame Attributes -->
        <attr name="showFrame" format="boolean"/>
        <attr name="frameRadius" format="dimension"/>
        <attr name="frameColor" format="color"/>
        <attr name="frameThickness" format="dimension"/>

        <!-- Seconds Hand Attributes -->
        <attr name="showSecondsHand" format="boolean"/>
        <attr name="secondHandColor" format="color"/>
        <attr name="secondHandThickness" format="dimension"/>

        <!-- Hour Hand Attributes -->
        <attr name="hourHandColor" format="color"/>
        <attr name="hourHandThickness" format="dimension"/>

        <!-- Minute Hand Attributes -->
        <attr name="minuteHandColor" format="color"/>
        <attr name="minuteHandThickness" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LabeledSeekBarView">
        <attr name="title" format="string" />
        <attr name="lowText" format="string" />
        <attr name="highText" format="string" />
        <attr name="progressValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="LabeledHapticSeekBarView">
        <attr name="hapticTitle" format="string" />
        <attr name="hapticLowText" format="string" />
        <attr name="hapticHighText" format="string" />
        <attr name="hapticStepValue" format="integer" />
        <attr name="hapticMaxStep" format="integer" />
    </declare-styleable>

</resources>