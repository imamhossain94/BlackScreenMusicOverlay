<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/OneUITheme">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@android:color/transparent</item>

        <item name="colorPrimaryText">@color/darkPrimaryText</item>
        <item name="colorSecondaryText">@color/darkSecondaryText</item>
        <item name="colorIcon">@color/darkIcon</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="colorCardBackground">@color/darkCardBackground</item>
        <item name="colorTipCardBackground">@color/darkTipCardBackground</item>
    </style>

    <style name="AppTheme.ClockStyle" parent="@style/OneUITheme">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@android:color/transparent</item>

        <item name="colorPrimaryText">@color/clockStylePrimaryText</item>
        <item name="colorSecondaryText">@color/clockStyleSecondaryText</item>
        <item name="colorIcon">@color/clockStyleIcon</item>
        <item name="colorBackground">@color/clockStyleBackground</item>
        <item name="colorCardBackground">@color/clockStyleCardBackground</item>
        <item name="colorTipCardBackground">@color/clockStyleTipCardBackground</item>

        <!-- Add these lines to make status bar and navigation bar black -->
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

</resources>